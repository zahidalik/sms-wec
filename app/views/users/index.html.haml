%h3.label.is-size-4.has-text-centered All Users        
%table.table.is-fullwidth.is-hoverable.is-bordered.is-striped
  %thead
    %tr
      %th{:scope => "col"} Full Name
      %th{:scope => "col"} Email
      %th{:scope => "col"} Contact
      %th{:scope => "col"} Role(s)
  - @users.each do |user|
    %tbody
      %tr
        %th{:scope => "row"} 
          = link_to user_path(user) do
            = user.full_name
        %td
          = user.email
        %td
          = user.mobile
        %td
          = render 'users/roles', user: user