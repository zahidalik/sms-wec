.columns
  .column.is-four-fifths
    %article.panel.is-info
      %p.panel-heading
        = student.full_name + "'s"
        dashbord
      %p.panel-tabs
        %a My Schools
        %a My Classes
        %a My Students
        %a My Exams
        %a My Markings
      .panel-block
        %p.control.has-icons-left
          %input.input.is-info{:placeholder => "Search", :type => "text"}/
          %span.icon.is-left
            %i.fas.fa-search{"aria-hidden" => "true"}
      %a.panel-block
        %span.panel-icon
          %i.fas.fa-school{"aria-hidden" => "true"}
        My schools
        .panel-tabs
          - if student.schools.any?        
            - student.schools.each do |school|
              = link_to student_school_url(student, school) do
                = school.name
          - else
            %a No schools allocated to you
      %a.panel-block
        %span.panel-icon
          %i.fas.fa-book{"aria-hidden" => "true"}
        My Classes
        .panel-tabs
          - if student.standards.any?
            - student.standards.each do |standard|      
              = link_to student_standard_url(student, standard) do
                = standard.name
          - else
            %a No class allocated to you    
      %a.panel-block
        %span.panel-icon
          %i.fas.fa-book{"aria-hidden" => "true"}
        minireset.css
      %a.panel-block
        %span.panel-icon
          %i.fas.fa-book{"aria-hidden" => "true"}
        jgthms.github.io
  .column.is-one-fifth   
    .dropdown
      .dropdown-trigger
        %button.button.is-medium{"aria-controls" => "dropdown-menu", "aria-haspopup" => "true"}
          %span My profile
          %span.icon.is-small
            %i.fas.fa-angle-down{"aria-hidden" => "true"}
      #dropdown-menu.dropdown-menu{:role => "menu"}
        .box
          .media
            .media-right
              %figure.image.is-128x128
                - if student.avatar.present?
                  = image_tag student.avatar, class: "is-rounded"
          .field.has-text-centered
            %strong Full Name:
            %br
            = student.full_name
            %p
              %strong username:
              %br
              = student.username
            %p
              %strong Contact Number:
              %br
              = student.contact
            %p
              %strong Email:
              %br
              = student.email
            %p
              %strong Father:
              %br
              = student.father
            %p
              %strong Mother:
              %br
              = student.mother
            %p
              %strong Address:
              %br
              = student.address
            - if current_user.has_role?(:admin)
              = link_to edit_student_path(student), class: "button is-warning" do 
                Edit student
- if current_user.has_role?(:admin)
