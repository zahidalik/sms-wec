- flash.each do |name, msg|
  - if name.is_a?(String)
    %div{:class => "alert alert-#{name.to_s == 'success' ? 'success' : 'danger'}", :role => "alert"}
      /%button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} x
      = content_tag :div, msg, :id => "flash_#{name}"
